<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:navigationIcon="@drawable/ic_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/font_outfit_bold"
                        android:text="General acount"
                        android:textColor="@color/black"
                        android:textSize="24dp" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="80dp"
                        android:src="@drawable/ic_logo_app"

                        />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/bg_radius_bottom_corner"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_change_ava"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/google_sans_bold"
                    android:text="Cập nhật thông tin"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textFontWeight="450"
                    android:textSize="20dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/img_ava" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google_sans_bold"
                            android:paddingStart="5dp"
                            android:text="Tên:"
                            android:textColor="@color/black"
                            android:textFontWeight="450"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/google_sans_bold"
                            android:paddingStart="5dp"
                            android:text="Họ:"
                            android:textColor="@color/black"
                            android:textFontWeight="450"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:id="@+id/edt_firstName"
                            android:layout_width="110dp"
                            android:layout_height="48dp"
                            android:background="@drawable/custom_input"
                            android:hint="Tên"
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/edt_lastName"
                            android:layout_width="193dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/custom_input"
                            android:hint="Họ"
                            android:textSize="16sp" />
                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google_sans_bold"
                            android:paddingStart="5dp"
                            android:text="Ngày sinh:"
                            android:textColor="@color/black"
                            android:textFontWeight="450"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/google_sans_bold"
                            android:paddingStart="5dp"
                            android:text="Tháng sinh:"
                            android:textColor="@color/black"
                            android:textFontWeight="450"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/google_sans_bold"
                            android:paddingStart="5dp"
                            android:text="Năm sinh:"
                            android:textColor="@color/black"
                            android:textFontWeight="450"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow>

                        <EditText
                            android:id="@+id/edt_dayBirthdate"
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:background="@drawable/custom_input"
                            android:hint="Ngày"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edt_monthBirthdate"
                            android:layout_width="90dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/custom_input"
                            android:hint="Tháng"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edt_yearBirthdate"
                            android:layout_width="106dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/custom_input"
                            android:hint="Năm"
                            android:textSize="16sp" />
                    </TableRow>
                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/google_sans_bold"
                            android:paddingStart="5dp"
                            android:text="Username:"
                            android:textColor="@color/black"
                            android:textFontWeight="450"
                            android:textSize="16sp" />
                        <EditText
                            android:id="@+id/edt_userName"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/custom_input"
                            android:hint="Nhập username"
                            android:textSize="16sp"/>
                </TableLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/bg_button"
                android:fontFamily="sans-serif-light"
                android:text="Xác nhận"
                android:textFontWeight="800"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>